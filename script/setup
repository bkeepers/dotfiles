#!/bin/bash
# Create symlinks for files in this directory in ~/

set -e

# change to directory of this script
cd $(dirname $0)/..

# Install oh my zsh
if [ ! -d ~/.oh-my-zsh ]; then
  echo "Installing oh-my-zsh..."
  sh -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"
  echo -e "\n\n"
fi

backup=~/.dotfiles-backup/$(date -u +"%Y-%m-%dT%H:%M:%SZ")
mkdir -p $backup

echo -e "Installing dotfiles..."
# move any existing dotfiles in homedir to dotfiles_old directory, then create symlinks
for file in *; do
  # Skip scripts and text files
  echo $file | egrep -q '(^script$|\.txt$|\.md$)' && continue

  if [ -e ~/.$file ]; then
    mv ~/.$file $backup
  fi
  echo "Symlinking $file to ~/.$file"
  ln -sf $PWD/$file ~/.$file
done



if [ ! -d ~/.keyboard ]; then
  git clone https://github.com/bkeepers/keyboard.git ~/.keyboard
  cd ~/.keyboard
  # https://github.com/jasonrudolph/keyboard/pull/11
  git co setup
  script/setup
fi
