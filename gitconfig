[user]
	name = Brandon Keepers
	email = brandon@opensoul.org
	signingkey = D5FACBF6
	email = bkeepers@github.com
[alias]
	co = checkout
	st = status
	ci = commit
	br = branch
	cp = cherry-pick

	# Always prune remote branches when fetching
	fetch = fetch -p

	# Amend the last commit
	amend = commit --amend -C HEAD

	# Undo the last commit, preserving the changes
	undo = reset --soft HEAD^

	# Remove the last commit, dropping the changes.
	kill = reset --hard HEAD^

	# Show number of commits by each contributor
	count = shortlog -sn

	# Use the staged changes to fixup the given commit
	#
	#   $ git add .
	#   $ git fixup HEAD~3
	#
	fixup = !sh -c 'REV=$(git rev-parse $1) && git commit --fixup $@ && git rebase -i --autosquash $REV^' -

	# Delete local branches that have been merged into the current branch
	merged = !sh -c 'git branch --merged HEAD | grep -v $(git rev-parse --abbrev-ref HEAD) | grep -v master | xargs git branch -d'

	# Show a graph of commits and merges
	graph = log --decorate --oneline --graph

	# Edit config
	ec = config --global -e

	# List Recent Branches
	recent = for-each-ref --count=5 --sort=-committerdate --format='%(refname:short)' refs/heads/

	# Create a commit before wiping changes so they are saved in the reflog
	wipe = !git add -A && git commit -qm 'WIPE SAVEPOINT' && git reset HEAD~1 --hard

	# Disable commit signing on stash
	stash = !echo "WTF?"



[apply]
	whitespace = nowarn
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
[push]
	default = simple
[merge]
	tool = opendiff
	summary = true
	defaultToUpstream = true
[branch]
	autosetuprebase = always
  autosetupmerge = true
[core]
	excludesfile = ~/.gitignore
	autocrlf = false
	mergeoptions = --no-edit
[help]
	autocorrect = 1
[rerere]
	enabled = true
[credential]
	helper = osxkeychain
[github]
	user = bkeepers
[hub]
	protocol = https
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[commit]
	gpgsign = true
