[user]
	name = Brandon Keepers
	email = brandon@opensoul.org
  signingkey = ssh-rsa 
[alias]
	# Shortcuts
	co = checkout
	st = status
	ci = commit
	br = branch
	cp = cherry-pick

	# Amend the last commit
	amend = commit --amend -C HEAD

	# Undo the last commit, preserving the changes
	undo = reset --soft HEAD^

	# Remove the last commit, dropping the changes.
	kill = reset --hard HEAD^

	# Show number of commits by each contributor
	count = shortlog -sn

	# Use the staged changes to fixup the given commit
	#
	#   $ git add .
	#   $ git fixup HEAD~3
	#
	fixup = !sh -c 'REV=$(git rev-parse $1) && git commit --fixup $@ && git rebase -i --autosquash $REV^' -

	# Show a graph of commits and merges
	graph = log --decorate --oneline --graph

	# Edit config
	ec = config --global -e

	# List Recent Branches
	recent = for-each-ref --count=10 --sort=-committerdate --format='%(refname:short)' refs/heads/

	# Create a commit before wiping changes so they are saved in the reflog
	wipe = !git add -A && git commit -qm 'WIPE SAVEPOINT' && git reset HEAD~1 --hard
	pristine = !git reset --hard && git clean -dffx

[apply]
	whitespace = nowarn
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
[push]
	default = current
[merge]
	tool = vscode
	summary = true
	defaultToUpstream = true
[branch]
	autosetuprebase = always
  autosetupmerge = true
[core]
	excludesfile = ~/.gitignore
	autocrlf = false
	mergeoptions = --no-edit
[help]
	autocorrect = 1
[rerere]
	enabled = true
[credential]
	helper = osxkeychain
[github]
	user = bkeepers
[hub]
	protocol = https
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[commit]
	# Always sign commits
	gpgsign = true
[fetch]
	# Always prune remote branches when fetching
	prune = true
# [protocol]
#	version = 2
[mergetool "vscode"]
	cmd = code --wait $MERGED
[init]
	defaultBranch = main
[pull]
	rebase = true
[gpg]
  format = ssh
[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
